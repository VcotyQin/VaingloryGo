<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="56dp"
	android:background="?attr/selectableItemBackground"
	android:foreground="?attr/selectableItemBackground"
	android:clickable="true"
	android:orientation="horizontal">

	<ImageView
		android:id="@+id/iv_item_region_picker_dialog_is_picker_icon"
		android:layout_height="24dp"
		android:layout_width="24dp"
		android:src="@drawable/ic_check"
		android:alpha="0.87"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
		android:layout_marginRight="24dp"/>

	<TextView
		android:id="@+id/tv_item_region_picker_dialog_region_name"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Text"
		android:textSize="18sp"
		android:textColor="?attr/colorTextStandard"
		android:alpha="0.87"
		android:layout_centerVertical="true"
		android:layout_marginLeft="80dp"/>

	<vcoty.vainglory.go.widget.CircleTextImageView
		android:id="@+id/circle_text_iv_item_region_picker_dialog_head_img"
		android:layout_height="40dp"
		android:layout_width="40dp"
		android:layout_centerVertical="true"
		app:citv_text_size="14sp"
		app:citv_text_color="?attr/colorTextWhite"
		app:citv_border_width="0dp"
		android:layout_marginLeft="24dp"/>

</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/match_fragment_itemRelativeLayout"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:clickable="true"
	android:foreground="?android:attr/selectableItemBackgroundBorderless"
	android:layout_width="match_parent"
	android:layout_height="72dp">

	<de.hdodenhof.circleimageview.CircleImageView
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:id="@+id/circle_text_iv_match_item_hero"
		android:layout_marginLeft="16dp"
		android:layout_centerVertical="true"
		app:civ_border_width="2dp"
		app:civ_border_color="#e7e7e7"/>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="16dp"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@id/circle_text_iv_match_item_hero">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="胜利"
			android:textSize="16sp"
			android:textColor="?attr/colorTextStandard"
			android:alpha="0.87"
			android:id="@+id/tv_match_item_aftermath"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="5v5 排位"
				android:textSize="14sp"
				android:textColor="?attr/colorTextStandard"
				android:alpha="0.56"
				android:id="@+id/tv_match_item_mode"/>

		</LinearLayout>

	</LinearLayout>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="13/5/24"
		android:textSize="20sp"
		android:id="@+id/tv_match_item_kda"
		android:textColor="?attr/colorTextStandard"
		android:alpha="0.87"
		android:layout_centerVertical="true"
		android:layout_marginRight="120dp"
		android:layout_alignParentRight="true"/>

	<LinearLayout
		android:id="@+id/ll_match_fragment_item_end"
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_marginRight="16dp"
		android:gravity="right">

		<ImageView
			android:id="@+id/iv_match_fragment_mvp"
			android:src="@drawable/ic_mvp"
			android:layout_width="24dp"
			android:layout_height="24dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="2天前"
			android:textSize="12sp"
			android:textColor="?attr/colorTextStandard"
			android:alpha="0.56"
			android:id="@+id/tv_match_item_date"
			android:gravity="center"
			android:layout_marginTop="5dp"/>

	</LinearLayout>

</RelativeLayout>


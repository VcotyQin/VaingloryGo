<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_height="wrap_content"
	android:layout_width="match_parent"
	android:layout_marginLeft="8dp"
	android:layout_marginRight="8dp"
	android:layout_marginBottom="8dp"
	android:layout_marginTop="8dp"
	android:clickable="true"
	android:id="@+id/cv_item_roster_stats_root"
	android:foreground="?android:attr/selectableItemBackgroundBorderless"
	app:cardCornerRadius="4dp"
	app:cardElevation="2dp">

	<RelativeLayout
		android:padding="8dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/tv_item_roster_stats_root_title"
			android:textSize="20sp"
			android:alpha="0.87"
			android:layout_marginLeft="6dp"
			android:layout_marginTop="6dp"
			android:textColor="?attr/colorAccent"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"/>

		<RelativeLayout
			android:id="@+id/item_roster_stats_rootRelativeLayout"
			android:layout_below="@id/tv_item_roster_stats_root_title"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content">

			<TextView
				android:id="@+id/tv_item_roster_stats_root_total"
				android:text="46.6K"
				android:alpha="0.87"
				android:textColor="?attr/colorTextStandard"
				android:textSize="24sp"
				android:gravity="center"
				android:layout_centerInParent="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>

			<com.razerdp.widget.animatedpieview.AnimatedPieView
				android:id="@+id/apv_item_roster_stats_root"
				android:layout_centerHorizontal="true"
				android:alpha="0.87"
				android:layout_width="match_parent"
				android:layout_height="300dp"/>

		</RelativeLayout>

		<android.support.v7.widget.RecyclerView
			android:id="@+id/rv_item_roster_stats_root_players"
			android:layout_marginTop="8dp"
			android:layout_centerHorizontal="true"
			android:layout_below="@id/item_roster_stats_rootRelativeLayout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>

	</RelativeLayout>

</android.support.v7.widget.CardView>

